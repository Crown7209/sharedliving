{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run codegen && next dev",
    "build": "npm run codegen && next build",
    "start": "next start",
    "lint": "next lint",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "dev:with-codegen": "concurrently \"npm run codegen:watch\" \"next dev\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run codegen"
  },
  "dependencies": {
    "@apollo/server": "4.11.0",
    "@as-integrations/next": "3.1.0",
    "@graphql-tools/merge": "9.0.0",
    "bcrypt": "5.1.1",
    "bcryptjs": "^3.0.2",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.7.2",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.27.0",
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-security": "^3.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
